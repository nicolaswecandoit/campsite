<div class="containershow">
  
  
  
      <%= render 'layouts/partials/messages' %>
<%= yield(:search) %>



<script>
$(function() {
  $('#loading-indicator').hide();  // hide it initially.
  $(document)  
    .ajaxStart(function() {
      $('#loading-indicator').show(); // show on any Ajax event.
      $('.containershow').hide();
    })
    .ajaxStop(function() {
      $('#loading-indicator').hide(); // hide it when it is done.
      $('.containershow').show();
  });
});
</script>



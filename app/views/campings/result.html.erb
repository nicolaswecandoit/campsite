<p id="notice"><%= notice %></p>

<%# permet de montrer le formulaire pour les filtres%>
<%= render 'searchfilter', camping: @camping %>

<div class="container-fluid">

  <div class="row">
    <div class="col-md-61">
      <div class="right-map">

      <div id="map"></div>
    </div>
  </div>


  <% if @campings.empty? %>
    Malheureusement aucun camping ne correspond à votre recherche.
    <%else%>
<!--<article>-->
<div class="col-md-62">

<!--prenium 1-->
<%if @pub.present? %>
<div class="col-md-6">
  <div class="campingitem">
      SPONSORISÉ
    <p><%= link_to @pub.name, camping_path(@pub.id) %></p>
    <% if @pub.image.present? %>
    <div class="imagecamp"><%= image_tag @pub.image%></div>
    <%else%>
    <img src="http://cdn-jpg2.theactivetimes.net/sites/default/files/camping.jpg" width="100%">
    <%end%>
    <%= @pub.adresse %> <%= @pub.code_postale %> <%= @pub.commune %>
    <p><%= @pub.nomdep %></p>
    <%= @pub.nomregion %>
    <p>Latitude : <%= @pub.latitude %></p>
    <p>Longitude : <%= @pub.longitude %></p>
    Nombre d'étoiles : <%= @pub.etoile %>
  </div>
</div>
<%else%>
<%end%>

<!--prenium 2-->
<%if @pubtwo.present? %>
<div class="col-md-6">
  <div class="campingitem">
      SPONSORISÉ
    <p><%= link_to @pubtwo.name, camping_path(@pubtwo.id) %></p>
     <% if @pubtwo.image.present? %>
    <div class="imagecamp"><%= image_tag @pubtwo.image%></div>
    <%else%>
    <img src="http://cdn-jpg2.theactivetimes.net/sites/default/files/camping.jpg" width="100%">
    <%end%>
    <%= @pubtwo.adresse %> <%= @pubtwo.code_postale %> <%= @pubtwo.commune %>
    <p><%= @pubtwo.nomdep %></p>
    <%= @pubtwo.nomregion %>
    <p>Latitude : <%= @pubtwo.latitude %></p>
    <p>Longitude : <%= @pubtwo.longitude %></p>
    Nombre d'étoiles : <%= @pubtwo.etoile %>
  </div>
</div>
<%else%>
<%end%>


  <% @campings.each do |camping| %>
    <div class="col-md-6">
      <div class="campingitem">
        <p><%= link_to camping.name, camping_path(camping.id) %></p>
         <% if camping.image.present? %>
          <div class="imagecamp"><%= image_tag camping.image%></div>
          <%else%>
          <img src="http://cdn-jpg2.theactivetimes.net/sites/default/files/camping.jpg" width="100%">
          <%end%>
        <%= camping.adresse %> <%= camping.code_postale %> <%= camping.commune %>
        <p><%= camping.nomdep %></p>
        <%= camping.nomregion %>
        <p>Latitude : <%= camping.latitude %></p>
        <p>Longitude : <%= camping.longitude %></p>
        Nombre d'étoiles : <%= camping.etoile %>
      </div>
    </div>
  <% end %>
<!--</article>-->
</div>

<%end%>
<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBHYJLTgnFqxMyLcqlOYg00RFmD6_7lLDM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->


<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
markers = handler.addMarkers(<%=raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
});
</script>




</div>


</div>

<p id="notice"><%= notice %></p>

<div class="container-fluid">

<h1>Campings</h1>
<div class="row">


  <div class="col-md-61">
  <div class="right-map">

      <div id="map"></div>
    </div>
  </div>

<!--<article>-->
<div class="col-md-62">
  <% @campings.each do |camping| %>
<div class="col-md-6">
  <div class="campingitem">
      <p><%= camping.name %></p>
      <%= camping.adresse %> <%= camping.code_postale %> <%= camping.commune %>
      <p><%= camping.nomdep %></p>
      <%= camping.nomregion %> <%= camping.numdep %> <%= camping.slug %> <%= camping.ville_id %>
      <%= camping.region_id %> <%= camping.departement_id %> <%= camping.latitude %> <%= camping.longitude %>
      <%= camping.etoile %>

        <td><%= link_to 'Show', camping %></td>
        <td><%= link_to 'Edit', edit_camping_path(camping) %></td>
        <td><%= link_to 'Destroy', camping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </div>
</div>
    <% end %>
<!--</article>-->
  </div>

  <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBHYJLTgnFqxMyLcqlOYg00RFmD6_7lLDM"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->


  <script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  });
  </script>




</div>


</div>




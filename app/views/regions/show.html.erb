<p id="notice"><%= notice %></p>
  <!--Affiche la map-->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-61">
      <div class="right-map">
      <div id="map"></div>
    </div>
  </div>

  <!--Affiche le render de la recherche-->
<div class="col-md-62">
  <%= render '/campings/searchfilter', camping: @campings %>

  <!--Affiche la map-->
    <h1><%=@region.campings.count%> campings région <%= @region.nomderegion %></h1>
      <p><%= @region.descriptionregion %></p>
        <h3>Les départements de la région <%= @region.nomderegion %></h3>
        <% @region.departements.sort{|a,b| a.nomdep <=> b.nomdep}.each do |departement| %>
          <ul><%= link_to departement.nomdep, departement_path(departement.id) %></ul>
        <%end%>
      <h2> Tous les campings de la région <%= @region.nomderegion %> </h2>
        <% @region.campings.each do |camping| %>

          <div class="col-md-6">
            <div class="campingitem">
              <p><%= link_to camping.name, camping_path(camping.id) %></p>
              <img src="http://cdn-jpg2.theactivetimes.net/sites/default/files/camping.jpg" width="475px" height="250px">
              <%= camping.adresse %> <%= camping.code_postale %> <%= camping.commune %>
              <p><%= camping.nomdep %></p>
              <%= camping.nomregion %>
              <p>Latitude : <%= camping.latitude %></p>
              <p>Longitude : <%= camping.longitude %></p>
              Nombre d'étoiles : <%= camping.etoile %>
            </div>
          </div>
        <% end %>
</div>

    <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBHYJLTgnFqxMyLcqlOYg00RFmD6_7lLDM"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<!-- only if you need custom infoboxes -->
    <script>
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      });
    </script>
  </div>
</div>



<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">

<%# AFFICHE LA MAP %>
    <div class="col-md-61">
      <div class="right-map">
        <div id="map"></div>
      </div>
    </div>

<!--<article>-->
<div class="col-md-62">
    <%# AFFICHE LA BARRE DE RECHERCHE AVEC FILTRES %>
  <%= render '/campings/searchfilter', camping: @campings %>


  <%# AFFICHE LES VILLES POUR LE DEPARTEMENT %>
    <h1>Tous les campings du département <%= @departement.nomdep %></h1>
      <p><%= @departement.description %></p>
        <h2>Les villes du département <%= @departement.nomdep %></h2>
          <% @departement.villes.sort{|a,b| a.nomcommune <=> b.nomcommune}.each do |ville| %>
            <ul><%= link_to ville.nomcommune, ville_path(ville.id) %></ul>
          <%end%>

  <%# AFFICHE LES CAMPINGS DU DEPARTEMENT %>
<% @departement.campings.each do |camping| %>
  <div class="col-md-6">
    <div class="campingitem">
      <p><%= link_to camping.name, camping_path(camping.id) %></p>
      <img src="http://cdn-jpg2.theactivetimes.net/sites/default/files/camping.jpg" width="475px" height="250px">
      <%= camping.adresse %> <%= camping.code_postale %> <%= camping.commune %>
      <p><%= camping.nomdep %></p>
      <%= camping.nomregion %>
      <p>Latitude : <%= camping.latitude %></p>
      <p>Longitude : <%= camping.longitude %></p>
      Nombre d'étoiles : <%= camping.etoile %>
    </div>
  </div>
<% end %>
<!--</article>-->
</div>

  <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBHYJLTgnFqxMyLcqlOYg00RFmD6_7lLDM"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<!-- only if you need custom infoboxes -->
  <script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
  </script>
  </div>
</div>

<%= link_to 'Edit', edit_departement_path(@departement) %> |
